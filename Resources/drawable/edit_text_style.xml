<?xml version="1.0" encoding="utf-8" ?>
<selctor xmlns:android="http://schemas.android.com/apk/res/android">
  <!--When the user has not placed the cursor in the rectangle-->
  <item android:state_focused="false">
    <shape android:shape="rectangle">
      <gradient
        android:startColor="#FFF"
        android:endColor="#FFF"></gradient>

      <stroke
        android:width="3dp"
        android:color="#4A6EA9"></stroke>

      <corners
        android:radius="2dp"></corners>

      <padding
        android:left="10dp"></padding>      
    </shape>
  </item>
  
</selctor>
