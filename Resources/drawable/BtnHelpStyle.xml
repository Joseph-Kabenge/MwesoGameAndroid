<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!--When the user is not pressing the button-->
  <item android:state_pressed="false">
    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="20dp"/>
          <solid android:color="#A4D6E6"/>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#4F2CF9" android:startColor="#1D2FA9"/>
          <corners android:radius="4dp"/>
          <stroke android:width="1dp" android:color="#DAEACA"/>
          <padding android:bottom="10dp" android:left="10dp" android:top="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <!--When the user has pressed the button-->
  <item android:state_pressed="true">
    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="20dp"/>
          <solid android:color="#A4E4F2"/>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <gradient android:angle="180" android:endColor="#7C3CD5" android:startColor="#3D5BD8"/>
          <corners android:radius="4dp"/>
          <stroke android:width="1dp" android:color="#DAEAFA"/>
          <padding android:bottom="10dp" android:left="10dp" android:top="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
